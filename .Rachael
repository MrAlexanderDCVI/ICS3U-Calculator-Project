class NumberButton {
  int number;
  int xCoord;
  int yCoord;
  String text;
  

  
  NumberButton(int nnumber) {
    number = nnumber;
  }
  
  void drawButton(int xCoord, int yCoord) {
    //rectMode(CENTER);
    fill(255);
    rect(xCoord, yCoord, 100, 100, 16);
  }
  
  void setText(String ttext) {
    fill(0);
    text = ttext;
    text(text, xCoord+10, yCoord+80);
  }  
};

